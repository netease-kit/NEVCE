<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_FFDCDFE5"
        android:layout_marginTop="6dp"
        android:layout_below="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:layout_marginTop="69dp"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_below="@id/tv_timer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@mipmap/default_head"/>

    <TextView
        android:id="@+id/tv_queue_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_head"
        android:layout_marginTop="31dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/tv_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_queue_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_corner_color_ffe5362c"
        android:gravity="center"
        android:onClick="cancelCall"
        android:text="取消呼叫"
        android:textColor="@color/white"
        android:textSize="16dp"/>

</RelativeLayout>